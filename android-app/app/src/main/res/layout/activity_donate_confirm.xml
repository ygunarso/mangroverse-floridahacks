<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonateConfirmActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:paddingHorizontal="16dp">
        <ImageView
            android:id="@+id/heartImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_emoji_heart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemsBox"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:background="@drawable/donate_box"
            app:layout_constraintTop_toBottomOf="@id/heartImage"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="32dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/normalSeeds"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/specialSeeds">
                <ImageView
                    android:id="@+id/normalSeedImage"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_donate_seed"
                    android:layout_marginTop="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/normalSeedTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mangrove Seeds"
                    style="@style/bold12"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/normalSeedImage"
                    app:layout_constraintBottom_toTopOf="@id/normalSeedCount"/>
                <TextView
                    android:id="@+id/normalSeedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x0"
                    style="@style/bold17"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/specialSeeds"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/normalSeeds"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/specialSeedImage"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_donate_seed_special"
                    android:layout_marginTop="25dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/specialSeedTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Special Mangrove Seeds"
                    android:layout_marginTop="4dp"
                    style="@style/bold12"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/specialSeedImage"
                    app:layout_constraintBottom_toTopOf="@id/specialSeedCount"/>
                <TextView
                    android:id="@+id/specialSeedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x0"
                    style="@style/bold17"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/donateThankYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bold18"
            android:text="Thank you for donating!"
            app:layout_constraintTop_toBottomOf="@id/itemsBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp"/>
        <TextView
            android:id="@+id/donateDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/medium14"
            android:text="@string/donateConfirmDesc"
            app:layout_constraintTop_toBottomOf="@id/donateThankYou"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="4dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/okButton"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/donate_confirm_button"
            app:layout_constraintTop_toBottomOf="@id/donateDescription"
            android:layout_marginTop="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/semibold16"
                android:textColor="@color/white"
                android:text="OK"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
