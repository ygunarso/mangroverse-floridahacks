<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderConfirmFragment">

    <TextView
        android:id="@+id/orderConfirmTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/semibold18"
        android:text="Confirm Your Order"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nurseryCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/orderConfirmTitle">
        <androidx.cardview.widget.CardView
            android:id="@+id/nurseryLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:cardCornerRadius="24dp"
            android:background="@drawable/white_circle"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/nurseryIcon"
                android:background="@drawable/ic_nursery"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/nurseryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steven's Baby Forest"
            style="@style/semibold14"
            android:textColor="@color/black"
            android:layout_marginLeft="22dp"
            app:layout_constraintTop_toTopOf="@id/nurseryLogo"
            app:layout_constraintStart_toEndOf="@id/nurseryLogo"/>
        <LinearLayout
            android:id="@+id/addressLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/nurseryName"
            app:layout_constraintTop_toBottomOf="@id/nurseryName"
            android:layout_marginTop="4dp">
            <ImageView
                android:id="@+id/googleMapsIcon"
                android:background="@drawable/ic_googlemaps"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <TextView
                android:id="@+id/nurseryAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2261 Shattuck Ave, Berkeley, CA 94704, USA"
                style="@style/medium11"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/hoursLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/addressLine"
            app:layout_constraintTop_toBottomOf="@id/addressLine"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/openText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick up Today"
                style="@style/medium11"
                android:textColor="#38B2F8"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/saplingsLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/hoursLine"
            app:layout_constraintTop_toBottomOf="@id/hoursLine"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/redIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_tree_red"/>
            <TextView
                android:id="@+id/redCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginLeft="4dp"
                style="@style/medium11"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/blackIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_tree_black"/>
            <TextView
                android:id="@+id/blackCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_marginLeft="4dp"
                style="@style/medium11"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/whiteIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_tree_white"/>
            <TextView
                android:id="@+id/whiteCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_marginLeft="4dp"
                style="@style/medium11"
                android:textColor="@color/black"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/whatElse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/semibold14"
        android:textColor="@color/black"
        android:text="What else?"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/nurseryCard"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/plantWithGuide"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/whatElse"
        android:background="@drawable/extras_unselected">
        <ImageView
            android:id="@+id/airbnbIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_airbnb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/guideText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:text="Plant with a guide"
            style="@style/semibold13"
            app:layout_constraintStart_toEndOf="@id/airbnbIcon"/>
        <TextView
            android:id="@+id/guideDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/guideText"
            android:text="Starting from $40"
            style="@style/medium11"
            app:layout_constraintStart_toStartOf="@id/guideText"/>
        <ImageView
            android:id="@+id/guideCheck"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_check_unselected"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/plantKits"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/plantWithGuide"
        android:background="@drawable/extras_unselected">
        <ImageView
            android:id="@+id/kitsIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_kits"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/kitsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:text="Buy Planting Kits"
            style="@style/semibold13"
            app:layout_constraintStart_toEndOf="@id/kitsIcon"/>
        <TextView
            android:id="@+id/kitsDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/kitsText"
            android:text="$40"
            style="@style/medium11"
            app:layout_constraintStart_toStartOf="@id/kitsText"/>
        <ImageView
            android:id="@+id/kitsCheck"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_check_unselected"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/totalPriceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/plantKits">
        <TextView
            android:id="@+id/totalPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/semibold13"
            android:text="Total Price"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/medium11"
            android:textColor="@color/dark_light_gray"
            android:text="Great! Your saplings were already donated."
            app:layout_constraintTop_toBottomOf="@id/totalPriceLabel"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            style="@style/semibold20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/creditCardInfo"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/totalPriceLayout"
        android:background="@drawable/white_box"
        android:layout_marginHorizontal="16dp">
        <ImageView
            android:id="@+id/creditCardPicture"
            android:layout_width="75dp"
            android:layout_height="48dp"
            android:src="@drawable/bofa_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="12dp"/>
        <LinearLayout
            android:id="@+id/creditCardDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/creditCardPicture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****-****-****-1234"
                style="@style/medium13"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank of America"
                style="@style/medium12"/>
        </LinearLayout>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>