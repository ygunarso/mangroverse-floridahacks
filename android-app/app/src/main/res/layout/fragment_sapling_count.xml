<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaplingCountFragment">

    <TextView
        android:id="@+id/saplingCountTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/semibold18"
        android:text="What would you like to order?"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/redItem"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/saplingCountTitle"
        android:background="@drawable/input_box12"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp">
        <ImageView
            android:id="@+id/redIcon"
            android:src="@drawable/ic_tree_red"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/redName"
            android:text="The Red Mangrove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/semibold15"
            android:layout_marginLeft="24dp"
            app:layout_constraintStart_toEndOf="@id/redIcon"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/redDescription"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="5 left at this nursery"
            style="@style/medium12"
            android:textColor="@color/dark_light_gray"
            app:layout_constraintStart_toStartOf="@id/redName"
            app:layout_constraintTop_toBottomOf="@id/redName"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/redNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/redDescription"
            app:layout_constraintStart_toStartOf="@id/redDescription"
            android:layout_marginTop="14dp">
            <ImageView
                android:id="@+id/redDecrement"
                android:src="@drawable/ic_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/redValue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/redValue"
                android:text="0"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/semibold16"
                app:layout_constraintStart_toEndOf="@id/redDecrement"
                app:layout_constraintEnd_toStartOf="@id/redIncrement"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/redIncrement"
                android:src="@drawable/ic_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/redValue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blackItem"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/redItem"
        android:background="@drawable/input_box12"
        android:layout_marginTop="12dp"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp">
        <ImageView
            android:id="@+id/blackIcon"
            android:src="@drawable/ic_tree_black"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/blackName"
            android:text="The Black Mangrove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/semibold15"
            android:layout_marginLeft="24dp"
            app:layout_constraintStart_toEndOf="@id/blackIcon"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/blackDescription"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="5 left at this nursery"
            style="@style/medium12"
            android:textColor="@color/dark_light_gray"
            app:layout_constraintStart_toStartOf="@id/blackName"
            app:layout_constraintTop_toBottomOf="@id/blackName"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/blackNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/blackDescription"
            app:layout_constraintStart_toStartOf="@id/blackDescription"
            android:layout_marginTop="14dp">
            <ImageView
                android:id="@+id/blackDecrement"
                android:src="@drawable/ic_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/blackValue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/blackValue"
                android:text="0"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/semibold16"
                app:layout_constraintStart_toEndOf="@id/blackDecrement"
                app:layout_constraintEnd_toStartOf="@id/blackIncrement"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/blackIncrement"
                android:src="@drawable/ic_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/blackValue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/whiteItem"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/blackItem"
        android:background="@drawable/input_box12"
        android:layout_marginTop="12dp"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp">
        <ImageView
            android:id="@+id/whiteIcon"
            android:src="@drawable/ic_tree_white"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/whiteName"
            android:text="The White Mangrove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/semibold15"
            android:layout_marginLeft="24dp"
            app:layout_constraintStart_toEndOf="@id/whiteIcon"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/whiteDescription"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="5 left at this nursery"
            style="@style/medium12"
            android:textColor="@color/dark_light_gray"
            app:layout_constraintStart_toStartOf="@id/whiteName"
            app:layout_constraintTop_toBottomOf="@id/whiteName"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/whiteNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/whiteDescription"
            app:layout_constraintStart_toStartOf="@id/whiteDescription"
            android:layout_marginTop="14dp">
            <ImageView
                android:id="@+id/whiteDecrement"
                android:src="@drawable/ic_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/whiteValue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/whiteValue"
                android:text="0"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/semibold16"
                app:layout_constraintStart_toEndOf="@id/whiteDecrement"
                app:layout_constraintEnd_toStartOf="@id/whiteIncrement"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/whiteIncrement"
                android:src="@drawable/ic_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/whiteValue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>