<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TreeViewActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/treeImageLayout"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:background="@color/sky"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/tree_image"
                    android:layout_width="182dp"
                    android:layout_height="240dp"
                    android:layout_marginBottom="-65dp"
                    app:layout_constraintBottom_toTopOf="@id/water"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/water"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/water_gradient"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="12dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/backIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/shareIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_share"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/moreIcon"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/moreIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="416dp"
                android:background="@drawable/tree_info"
                android:elevation="24dp"
                android:paddingBottom="51dp"
                app:layout_constraintTop_toTopOf="@id/treeImageLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/treeInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/rect"
                        android:layout_width="36dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rect"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/treeType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="29dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/treeTypeIcon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/treeTypeLabel"
                            style="@style/TreeType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:text="Species Not Assigned"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/treeTypeIcon"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/treeName"
                        style="@style/TreeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mangrove Tree"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/treeType" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        app:layout_constraintTop_toBottomOf="@id/treeName">

                        <TextView
                            android:id="@+id/levelLabel"
                            style="@style/LevelCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lv.0"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ProgressBar
                            android:id="@+id/levelBar"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="16dp"
                            android:progress="0"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/progressCount"
                            app:layout_constraintStart_toEndOf="@id/levelLabel"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/progressCount"
                            android:layout_width="104dp"
                            android:layout_height="28dp"
                            android:background="@drawable/progress_count"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/levelBar"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/completedProgress"
                                    style="@style/ProgressCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/overSign"
                                    style="@style/ProgressCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="/"
                                    app:layout_constraintStart_toEndOf="@id/completedProgress" />

                                <TextView
                                    android:id="@+id/remainingProgress"
                                    style="@style/ProgressCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="5"
                                    app:layout_constraintStart_toEndOf="@id/overSign" />

                                <TextView
                                    style="@style/ProgressCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="2dp"
                                    android:text="Days"
                                    app:layout_constraintStart_toEndOf="@id/remainingProgress" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/donorPlanterInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/level">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/donorPictureLayout"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@color/gray"
                            app:cardCornerRadius="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/donorPicture"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </androidx.cardview.widget.CardView>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/donorInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginLeft="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/donorPictureLayout"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/donorLabel"
                                style="@style/ProfileLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Donor"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/donorName"
                                style="@style/ProfileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="You"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <ImageView
                            android:id="@+id/separator"
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="16dp"
                            android:background="@color/gray"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/planterPictureLayout"
                            app:layout_constraintStart_toEndOf="@id/donorInfo"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/planterPictureLayout"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="16dp"
                            android:background="@color/gray"
                            app:cardCornerRadius="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/separator"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/planterPicture"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </androidx.cardview.widget.CardView>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/planterInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginLeft="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/planterPictureLayout"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/planterLabel"
                                style="@style/ProfileLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Planter"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/planterName"
                                style="@style/ProfileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Planter"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/treeInfoTab"
                    style="@style/AppTabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/treeInfo"
                    app:tabTextAppearance="@style/AppTabTextAppearance"></com.google.android.material.tabs.TabLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    app:layout_constraintTop_toBottomOf="@id/treeInfoTab">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/picturesList"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"></androidx.recyclerview.widget.RecyclerView>

                    <TextView
                        android:id="@+id/impactTitle"
                        style="@style/semibold15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Environmental Impact"
                        app:layout_constraintTop_toBottomOf="@id/picturesList" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/impactLayout"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/impactTitle">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/sequestedLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/green_box"
                            android:padding="14dp"
                            app:layout_constraintEnd_toStartOf="@id/arrow"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                android:id="@+id/sequestedTitle"
                                style="@style/medium12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CO2 Sequested"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/sequestedAmount"
                                style="@style/semibold16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0.1 t"
                                app:layout_constraintTop_toBottomOf="@id/sequestedTitle" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <ImageView
                            android:id="@+id/arrow"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginHorizontal="12dp"
                            android:src="@drawable/ic_arrow"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/earnedLayout"
                            app:layout_constraintStart_toEndOf="@id/sequestedLayout"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/earnedLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/blue_box"
                            android:padding="14dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toEndOf="@id/arrow">

                            <TextView
                                android:id="@+id/earnedTitle"
                                style="@style/medium12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="O2 Earned"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/earnedAmount"
                                style="@style/semibold16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/earnedTitle" />

                            <ImageView
                                android:id="@+id/oxygenIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginLeft="7dp"
                                android:src="@drawable/ic_oxygen"
                                app:layout_constraintStart_toEndOf="@id/earnedAmount"
                                app:layout_constraintTop_toBottomOf="@id/earnedTitle" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/learnImpact"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/input_box"
                        android:padding="14dp"
                        app:layout_constraintTop_toBottomOf="@id/impactLayout">

                        <TextView
                            android:id="@+id/learnImpactText"
                            style="@style/medium13"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="See how it's calculated"
                            app:layout_constraintStart_toStartOf="parent" />

                        <ImageView
                            android:id="@+id/learnImpactIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/treeInfoTitle"
                        style="@style/semibold15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Tree Information"
                        app:layout_constraintTop_toBottomOf="@id/learnImpact" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/speciesInfo"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_box"
                        app:layout_constraintTop_toBottomOf="@id/treeInfoTitle">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/speciesDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/speciesTitle"
                                style="@style/medium12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Species"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/speciesIcon"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginTop="3dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/speciesTitle" />

                            <TextView
                                android:id="@+id/speciesName"
                                style="@style/medium13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="Species Not Assigned"
                                app:layout_constraintBottom_toBottomOf="@id/speciesIcon"
                                app:layout_constraintStart_toEndOf="@id/speciesIcon"
                                app:layout_constraintTop_toTopOf="@id/speciesIcon" />

                            <TextView
                                android:id="@+id/learnMore"
                                style="@style/semibold13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="19dp"
                                android:text="Learn More"
                                android:textColor="@color/tree"
                                app:layout_constraintTop_toBottomOf="@id/speciesName" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <ImageView
                            android:id="@+id/speciesImage"
                            android:layout_width="62dp"
                            android:layout_height="88dp"
                            android:layout_marginRight="24dp"
                            android:src="@drawable/tree_red_real"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/measurementsInfo"
                        android:layout_width="match_parent"
                        android:layout_height="144dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/white_box"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="16dp"
                        app:layout_constraintTop_toBottomOf="@id/speciesInfo">

                        <TextView
                            android:id="@+id/widthTitle"
                            style="@style/medium12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Width"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/widthBefore"
                            style="@style/semibold13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Before"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/widthTitle" />

                        <ImageView
                            android:id="@+id/widthArrow"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow"
                            app:layout_constraintBottom_toBottomOf="@id/widthBefore"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/widthBefore" />

                        <TextView
                            android:id="@+id/widthAfter"
                            style="@style/semibold13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="After"
                            app:layout_constraintStart_toEndOf="@id/widthArrow"
                            app:layout_constraintTop_toTopOf="@id/widthBefore" />

                        <TextView
                            android:id="@+id/heightTitle"
                            style="@style/medium12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="Height"
                            app:layout_constraintTop_toBottomOf="@id/widthBefore" />

                        <TextView
                            android:id="@+id/heightBefore"
                            style="@style/semibold13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Before"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/heightTitle" />

                        <ImageView
                            android:id="@+id/heightArrow"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow"
                            app:layout_constraintBottom_toBottomOf="@id/heightBefore"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/heightBefore" />

                        <TextView
                            android:id="@+id/heightAfter"
                            style="@style/semibold13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="After"
                            app:layout_constraintStart_toEndOf="@id/heightArrow"
                            app:layout_constraintTop_toTopOf="@id/heightBefore" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/dateInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@id/measurementsInfo">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/donatedDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toStartOf="@id/plantedDate"
                            app:layout_constraintHorizontal_weight="1.25"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/donatedTitle"
                                style="@style/medium12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Donated"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/donatedTime"
                                style="@style/semibold13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Today"
                                app:layout_constraintTop_toBottomOf="@id/donatedTitle" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/plantedDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toStartOf="@id/ageDate"
                            app:layout_constraintHorizontal_weight="1.25"
                            app:layout_constraintStart_toEndOf="@id/donatedDate"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/plantedTitle"
                                style="@style/medium12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Planted"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/plantedTime"
                                style="@style/semibold13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Not Yet Planted"
                                app:layout_constraintTop_toBottomOf="@id/plantedTitle" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ageDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toEndOf="@id/plantedDate"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/ageTitle"
                                style="@style/medium12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Age"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/ageTime"
                                style="@style/semibold13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="0 days"
                                app:layout_constraintTop_toBottomOf="@id/ageTitle" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>